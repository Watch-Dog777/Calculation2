<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:layout_weight="0.11">

        <TextView
            android:id="@+id/textViewSwitch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="计算"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textViewSwitch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="换算"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/textViewSwitch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="程序员计算"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textViewSwitch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="科学计算"
            android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal" >


        <ImageView
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/imageView1"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img1"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img2"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img3"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/imageView4"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img4"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/imageView5"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img5"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_column="2"
            android:layout_row="1"
            android:id="@+id/imageView6"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img6"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/imageView7"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img7"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/imageView8"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img8"
            android:paddingBottom="10dp"/>

        <ImageView
            android:layout_column="2"
            android:layout_row="2"
            android:id="@+id/imageView9"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img9"
            android:paddingBottom="10dp"/>


    </GridLayout>

</LinearLayout>